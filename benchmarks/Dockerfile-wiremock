ARG WIREMOCK_IMAGE_TAG="2.32.0"
ARG WIREMOCK_IMAGE_REPO="wiremock"
ARG WIREMOCK_IMAGE_NAME="wiremock"

ARG WIREMOCK_API_COUNT

FROM ${WIREMOCK_IMAGE_REPO}/${WIREMOCK_IMAGE_NAME}:${WIREMOCK_IMAGE_TAG}

# Scripts
COPY scripts /scripts
RUN chmod -R +x /scripts

ENV WIREMOCK_API_COUNT=${WIREMOCK_API_COUNT}

ENTRYPOINT ["/scripts/entrypoint.sh"]
